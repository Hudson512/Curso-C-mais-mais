NAME = convert

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

HEARDERS = ScalarConverter.hpp
SRCS = ScalarConverter.cpp main.cpp

OBJS = $(SRCS:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp $(HEARDERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

teste: $(NAME)
	@@echo "----- Testando valores inteiros validos -----"
	./$(NAME) 0
	@@echo "---------------------------------------------"
	./$(NAME) 42
	@@echo "---------------------------------------------"
	./$(NAME) -42
	@@echo "---------------------------------------------"
	./$(NAME) 2147483647
	@@echo "---------------------------------------------"
	./$(NAME) -2147483648
	@@echo "---------------------------------------------"
	@@echo "----- Testando valores float validos -----"
	./$(NAME) 0.0f
	@@echo "---------------------------------------------"
	./$(NAME) 42.0f
	@@echo "---------------------------------------------"
	./$(NAME) -42.0f
	@@echo "---------------------------------------------"
	./$(NAME) 3.40282e+38f
	@@echo "---------------------------------------------"
	./$(NAME) -3.40282e+38f
	@@echo "---------------------------------------------"
	./$(NAME) 1.17549e-38f
	@@echo "---------------------------------------------"
	./$(NAME) -1.17549e-38f
	@@echo "---------------------------------------------"
	@@echo "----- Testando valores double validos -----"
	./$(NAME) 0.0
	@@echo "---------------------------------------------"
	./$(NAME) 42.0
	@@echo "---------------------------------------------"
	./$(NAME) -42.0
	@@echo "---------------------------------------------"
	./$(NAME) 1.79769e+308
	@@echo "---------------------------------------------"
	./$(NAME) -1.79769e+308
	@@echo "---------------------------------------------"
	./$(NAME) 2.22507e-308
	@@echo "---------------------------------------------"
	./$(NAME) -2.22507e-308
	@@echo "---------------------------------------------"
	@@echo "----- Testando valores char validos -----"
	./$(NAME) a
	@@echo "---------------------------------------------"
	./$(NAME) Z
	@@echo "---------------------------------------------"
	./$(NAME) 0
	@@echo "---------------------------------------------"
	./$(NAME) ' '
	@@echo "---------------------------------------------"
	./$(NAME) '~'
	@@echo "---------------------------------------------"
	@@echo "----- Testando valores especiais -----"
	./$(NAME) nan
	@@echo "---------------------------------------------"
	./$(NAME) +inf
	@@echo "---------------------------------------------"
	./$(NAME) -inf
	@@echo "---------------------------------------------"
	./$(NAME) nanf
	@@echo "---------------------------------------------"
	./$(NAME) +inff
	@@echo "---------------------------------------------"
	./$(NAME) -inff
	@@echo "---------------------------------------------"
	@@echo "----- Testando valores invalidos -----"
	./$(NAME) hello
	@@echo "---------------------------------------------"
	./$(NAME) 42abc
	@@echo "---------------------------------------------"
	./$(NAME) 3.4.5
	@@echo "---------------------------------------------"
	./$(NAME) 1e10.5
	@@echo "---------------------------------------------"
	./$(NAME) 12345678901234567890
	@@echo "---------------------------------------------"
	./$(NAME) 1.79769e+309
	@@echo "---------------------------------------------"
	./$(NAME) 3.40282e+39f
	@@echo "---------------------------------------------"
	./$(NAME) ""
	@@echo "---------------------------------------------"
	./$(NAME) " "
	@@echo "---------------------------------------------"
	./$(NAME) "   "
	@@echo "---------------------------------------------"
	./$(NAME) "a b"
	@@echo "---------------------------------------------"
	./$(NAME) "++1"
	@@echo "---------------------------------------------"
	./$(NAME) "--1"
	@@echo "---------------------------------------------"
	./$(NAME) "+-1"
	@@echo "---------------------------------------------"
	./$(NAME) "-+1"
	@@echo "---------------------------------------------"
	./$(NAME) "1f2"
	@@echo "---------------------------------------------"
	./$(NAME) "1.0f0"
	@@echo "---------------------------------------------"
	./$(NAME) "1..0"
	@@echo "---------------------------------------------"
	./$(NAME) "1.0ff"
	@@echo "---------------------------------------------"
	./$(NAME) "infinit"y
	@@echo "---------------------------------------------"
	./$(NAME) "NaN"
	@@echo "---------------------------------------------"
	./$(NAME) "inffinity"
	@@echo "---------------------------------------------"

.PHONY: all clean fclean re